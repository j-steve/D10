doctype html
html
  head
    title=D10
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/static/landing.css")
  body
    div#content
      form#dice-count-form
        input#player-name(placeholder="Player Name", required, autofocus)
        input#dice-count(type="number", placeholder="# of die", min=1, max=100, required)
        button(type=submit)
          |Roll!
      div#dice-roll-area
      div#raises(style="display: none")
        div#raise-count-container
          span.label
            |Raises:
          span#raise-count.value
        div#leftover-dice-container
          span.label
            |Leftover Dice:
          span#leftover-dice-count.value
    div#content
      div#log
    script(src="https://code.jquery.com/jquery-3.6.0.js", crossorigin="anonymous")
    script(src="/static/bin/landing.js")